<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <application>
        <resource-bundle>
            <base-name>com.javastudio.lms.tutorial.web.i18n.messages</base-name>
            <var>msg</var>
        </resource-bundle>

        <resource-bundle>
            <base-name>com.javastudio.lms.tutorial.web.i18n.labels</base-name>
            <var>lbl</var>
        </resource-bundle>

        <message-bundle>com.javastudio.lms.tutorial.web.i18n.validations</message-bundle>

        <locale-config>
            <default-locale>en_US</default-locale>
            <supported-locale>fa_IR</supported-locale>
            <supported-locale>en_US</supported-locale>
        </locale-config>
    </application>

    <lifecycle>
        <phase-listener>com.javastudio.lms.tutorial.web.listener.DebugListener</phase-listener>
    </lifecycle>
</faces-config>