<?xml version='1.0' encoding='UTF-8'?>
<facelet-taglib xmlns="http://xmlns.jcp.org/xml/ns/javaee"
                xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facelettaglibary_2_2.xsd"
                version="2.2">

    <namespace>http://javastudio.com/tags</namespace>

    <tag>
        <tag-name>greeting</tag-name>
        <component>
            <component-type>com.javastudio.tutorial.jsf.component.UIGreeting</component-type>
        </component>

        <attribute>
            <name>name</name>
            <type>java.lang.String</type>
        </attribute>
    </tag>

    <tag>
        <tag-name>current</tag-name>
        <component>
            <component-type>com.javastudio.tutorial.jsf.component.UICurrent</component-type>
        </component>

        <attribute>
            <name>time</name>
            <required>true</required>
            <type>java.time.LocalDateTime</type>
        </attribute>
    </tag>

    <tag>
        <tag-name>tabContainer</tag-name>
        <component>
            <component-type>com.javastudio.tutorial.jsf.component.TabContainer</component-type>
            <renderer-type>com.javastudio.tutorial.jsf.render.TabContainerRenderer</renderer-type>
        </component>
    </tag>

    <tag>
        <tag-name>tab</tag-name>
        <component>
            <component-type>com.javastudio.tutorial.jsf.component.Tab</component-type>
        </component>
        <attribute>
            <name>src</name>
            <required>true</required>
            <type>java.lang.String</type>
        </attribute>
        <attribute>
            <name>active</name>
            <required>false</required>
            <type>java.lang.Boolean</type>
        </attribute>
        <attribute>
            <name>text</name>
            <required>true</required>
            <type>java.lang.String</type>
        </attribute>
    </tag>

    <tag>
        <tag-name>lookup</tag-name>
        <component>
            <component-type>com.javastudio.tutorial.jsf.component.Lookup</component-type>
            <renderer-type>com.javastudio.tutorial.jsf.render.LookupRenderer</renderer-type>
        </component>
        <attribute>
            <name>lookupPath</name>
            <required>true</required>
            <type>java.lang.String</type>
        </attribute>
        <attribute>
            <name>inputClass</name>
            <required>false</required>
            <type>java.lang.String</type>
        </attribute>
        <attribute>
            <name>btnClass</name>
            <required>false</required>
            <type>java.lang.String</type>
        </attribute>
        <attribute>
            <name>readOnly</name>
            <required>false</required>
            <type>java.lang.Boolean</type>
        </attribute>
        <attribute>
            <name>inputText</name>
            <required>false</required>
            <type>java.lang.String</type>
        </attribute>
        <attribute>
            <name>required</name>
            <required>false</required>
            <type>java.lang.Boolean</type>
        </attribute>
        <attribute>
            <name>requiredMessage</name>
            <required>false</required>
            <type>java.lang.String</type>
        </attribute>
        <attribute>
            <name>binding</name>
            <required>false</required>
            <type>javax.faces.component.UIComponent</type>
        </attribute>
    </tag>

    <tag>
        <tag-name>page</tag-name>
        <component>
            <component-type>com.javastudio.tutorial.jsf.component.Page</component-type>
            <renderer-type>com.javastudio.tutorial.jsf.render.PageRenderer</renderer-type>
        </component>
        <attribute>
            <name>src</name>
            <required>true</required>
            <type>java.lang.String</type>
        </attribute>
    </tag>


</facelet-taglib>